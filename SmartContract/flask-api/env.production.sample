# Production configuration for VPS
# Copy this to .env on VPS: cp env.production.sample .env

# Database configuration
# Option 1: If PostgreSQL runs in Docker container
DB_URL=postgresql+psycopg2://postgres:postgres@smartfarm-postgres:5432/SmartFarm1

# Option 2: If PostgreSQL runs on host
# DB_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/SmartFarm1

# Option 3: If PostgreSQL runs on different host
# DB_URL=postgresql+psycopg2://postgres:postgres@YOUR_DB_HOST:5432/SmartFarm1

# API Security - CHANGE THIS TO STRONG RANDOM KEY IN PRODUCTION!
API_KEY=your_very_strong_random_api_key_here_change_this

# Sensor ID mapping (1 Arduino node â†’ 4 sensors in database)
# These sensor IDs must exist in the database
TEMP_SENSOR_ID=7
HUMID_SENSOR_ID=8
SOIL_SENSOR_ID=9
LIGHT_SENSOR_ID=10

# Oracle Node URL
# If Oracle Node runs on same VPS:
ORACLE_URL=http://localhost:5001/oracle/push

# If Oracle Node runs in Docker container:
# ORACLE_URL=http://oracle-node:5001/oracle/push

# If Oracle Node runs on different server:
# ORACLE_URL=http://YOUR_ORACLE_IP:5001/oracle/push


